  <body>
    <section id="header">
      <div class="row">
      </div>
    </section>
    <section id="info" class="page2 page10">
      <div class="row">
        <div class="small-12  header text-left heading top columns">
          <h3>
            {{pc_backup_wizard_for_windows1}}
          </h3>
        </div>
        <div class="content">
          <div class="info left">
            <div class="small-2 text-center none columns">
<img src="https://s3.amazonaws.com/image.forms.com/step3-icon.png" alt=""/>
            </div>
            <div class="small-10 none columns">
              <h5>
                {{secure_checkout}}
              </h5>
            </div>
          </div>
          <div class="panel left">
            <div id="loadingOrder">
              <h3>
                {{please_wait_your_order_is_being_processed}}
              </h3>
              <div class="spinner" data-loader="circle-side">
              </div>
            </div>
            <div id="successOrder" style="display:none;">
              <div class="content-message">
<img class="header-image" src="https://s3.amazonaws.com/image.forms.com/1441793997_checkmark_done_complete.png" width="50" border="0"/><span style="font-size:22px;font-weight: 200;">{{congrats_your_order_was_successfully_processed}}</span>                <br/>
              </div>
              <h6 style="margin-top: 10px; font-weight: 700; color: #666; font-size: 22px">
                {{please_click_the_button_below_to_close_this_page_and_access_your_files}}
              </h6>
              <p style="color: #888; font-size: 16px;">{{please_note_that_depending_on_the_amount_and_size_of_your_files_it_can_take_several_hours_for_all_data_to_be_accessible}}</p>
            </div>
            <div id="failOrder" style="padding-left: 20px;display:none;">
              <div class="content-message">
<img class="header-image" src="https://s3.amazonaws.com/image.forms.com/1441794035_010_x.png" width="50" border="0"/><span style="font-size:18px;font-weight: 200;">{{sorry_your_order_was_not_completed_please_try_again}}</span>                <br/>
              </div>
              <h6 style="margin-top: 10px; font-weight: 700; color: #666; font-size: 22px">
                {{please_click_the_back_button_below_to_fix_any_errors_and_try_again}}
              </h6>
            </div>
            <div id="backButton" style="display:none; text-align: center;">
              <input id="back-button" type="button" class="button" value='{{go_back}}' tabindex="1"/>
            </div>
            <div id="nextButton" style="display:none; text-align: center;">
              <input id="next-button" type="button" class="button" value='{{close}}' tabindex="1"/>
            </div>
          </div>
        </div>
        <div class="footer">
          <div class="small-6 columns none">
            <ul>
              <li style="margin-left: 0">
<a href="#">{{stop_backup}}</a>
              </li>
              <li>
<img src="images/img_lock.png" alt=""/>{{256_bit_ssl_secure_connection}}
              </li>
            </ul>
          </div>
          <div class="small-6 text-right columns none">
            <ul>
              <li>
<a href="#"><img src="images/logo_mca.png" alt=""/></a>
              </li>
              <li>
<a href="#"><img src="images/logo_norton.png" alt=""/></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>
<script src="js/vendor/jquery.js"></script><script src="js/foundation.min.js"></script><script>
$(document).foundation();
    </script><script>
  // guid || (guid = Math.random());

  function hideOverlay() {
      document.getElementById('loadingOrder').style.display = "none";
  }

  function showNext() {
      document.getElementById("nextButton").style.display = "block";
  }

  function hideNext() {
      document.getElementById("nextButton").style.display = "none";
  }

  function showBack() {
      document.getElementById("backButton").style.display = "block";
  }

  function hideBack() {
      document.getElementById("backButton").style.display = "none";
  }

  function showSuccess() {
      document.getElementById("successOrder").style.display = "block";
  }

  function showError() {
      document.getElementById("failOrder").style.display = "block";
  }


 var xhr;

 if (window.XMLHttpRequest) {
   // code for IE7+, Firefox, Chrome, Opera, Safari
   xhr = new XMLHttpRequest();
 } else {
   // code for IE6, IE5
   xhr = new ActiveXObject("Microsoft.XMLHTTP");
 }

 xhr.open('POST',
          encodeURI('https://a.spdse.com/pcbackup-registration/index.php'));
 xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
 xhr.onreadystatechange = function () {
   if (xhr.readyState === 4 && xhr.status === 200) {
     var response = JSON.parse(xhr.responseText);
     if (response.status == 'success') {
       var email = response.email;
       var password = response.password;

       document.getElementById("next-button").addEventListener("click", function () {
         external.InstallSyncClinet(email, password);
         window.open('https://files.pcbackupwizard.net', '_blank', 'resizable=yes');
       }, false);

       hideOverlay();
       showSuccess();
       showNext();
     } else {
       hideOverlay();
       showError();
       showBack();
     }
   }
   else if (xhr.status !== 200) {
     hideOverlay();
     showError();
     showBack();
   }
 };
 xhr.send(encodeURI('guid=' + guid + '&rand=' + Math.floor((Math.random() * 100000) + 1)));
</script>
  </body>
</html>

